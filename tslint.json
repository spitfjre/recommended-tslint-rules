{
	"extends": ["tslint:recommended", "tslint-etc", "tslint-config-prettier"],
	"rulesDirectory": ["codelyzer", "tslint-plugin-prettier"],
	"rules": {
		"adjacent-overload-signatures": true,
		"array-type": [true, "array"],
		"arrow-return-shorthand": true,
		"callable-types": true,
		"class-name": true,
		"comment-format": [true, "check-space"],
		"component-selector": [true, "element", "app", "kebab-case"],
		"curly": true,
		"deprecation": { "severity": "warn" },
		"directive-selector": [true, "attribute", "app", "camelCase"],
		"forin": true,
		"import-blacklist": [true, "rxjs/Rx"],
		"interface-name": false,
		"interface-over-type-literal": true,
		"label-position": true,
		"max-classes-per-file": false,
		"max-file-line-count": [true, 1500],
		"member-access": [true, "no-public"],
		"member-ordering": [true, { "order": ["static-field", "instance-field", "static-method", "instance-method"] }],
		"no-angle-bracket-type-assertion": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-conditional-assignment": true,
		"no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
		"no-construct": true,
		"no-debugger": true,
		"no-default-export": true,
		"no-duplicate-super": true,
		"no-duplicate-switch-case": true,
		"no-duplicate-variable": [true, "check-parameters"],
		"no-dynamic-delete": true,
		"no-empty": false,
		"no-empty-interface": true,
		"no-eval": true,
		"no-inferrable-types": [true, "ignore-params"],
		"no-invalid-template-strings": true,
		"no-invalid-this": [true, "check-function-in-method"],
		"no-misused-new": true,
		"no-non-null-assertion": true,
		"no-redundant-jsdoc": true,
		"no-reference": true,
		"no-require-imports": true,
		"no-return-await": true,
		"no-shadowed-variable": true,
		"no-string-literal": false,
		"no-string-throw": true,
		"no-switch-case-fall-through": true,
		"no-unnecessary-class": [true, "allow-constructor-only", "allow-static-only", "allow-empty-class"],
		"no-unnecessary-initializer": true,
		"no-unsafe-finally": true,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"object-literal-sort-keys": false,
		"one-variable-per-declaration": [true, "ignore-for-loop"],
		"only-arrow-functions": true,
		"ordered-imports": [
			true,
			{ "import-sources-order": "case-insensitive", "named-imports-order": "case-insensitive", "grouped-imports": true }
		],
		"prefer-const": true,
		"prefer-for-of": true,
		"prefer-method-signature": true,
		"prefer-object-spread": true,
		"radix": true,
		"switch-default": true,
		"triple-equals": [true, "allow-null-check"],
		"typedef": [true, "call-signature", "property-declaration"],
		"unified-signatures": true,
		"use-isnan": true,
		"variable-name": false,
		// tslint-etc
		"no-unused-declaration": {
			"options": [
				{
					"declarations": true,
					"imports": true
				}
			],
			"severity": "error"
		},
		"throw-error": true,
		// codelyzer
		"component-class-suffix": true,
		"component-max-inline-declarations": true,
		"contextual-lifecycle": true,
		"directive-class-suffix": true,
		"no-attribute-decorator": true,
		"no-conflicting-lifecycle": true,
		"no-forward-ref": false,
		"no-host-metadata-property": true,
		"no-input-rename": true,
		"no-inputs-metadata-property": true,
		"no-lifecycle-call": true,
		"no-output-native": true,
		"no-output-on-prefix": true,
		"no-output-rename": true,
		"no-outputs-metadata-property": true,
		"no-pipe-impure": false,
		"no-queries-metadata-property": true,
		"no-unused-css": true,
		"prefer-inline-decorator": true,
		"prefer-output-readonly": false,
		"template-banana-in-box": true,
		"template-conditional-complexity": false,
		"template-cyclomatic-complexity": false,
		"template-i18n": false,
		"template-no-negated-async": true,
		"template-use-track-by-function": false,
		"use-component-selector": true,
		"use-component-view-encapsulation": false,
		"use-lifecycle-interface": true,
		"use-pipe-transform-interface": true,
		// tslint-plugin-prettier
		"prettier": true
	}
}
